<h1>投稿一覧</h1>

<table>

   <tbody>
     <% @photos.each do |photo| %>
       <div>
         <span>ユーザー名</span><br>
         <span><%= photo.user.name %></span><br>
         <span> コメント</span>
         <p><%= photo.content %></p>
         <p><%= image_tag photo.image.url %></p>
        <% if current_user.id == photo.id %>
           <span><%= link_to '詳細', photo,class: 'btn btn-default'  %></span>
           <span><%= link_to '編集', edit_photo_path(photo.id),data: { confirm: '本当に編集していいですか？' },class: 'btn btn-default'   %></span>
           <span><%= link_to '削除', photo_path(photo.id), method: :delete,class: 'btn btn-default'  %></span>
         <% end %>
       </div>
     <% end %>
   </tbody>
</table>

<br>
<% if logged_in? %>
  <%= link_to '写真を投稿', new_photo_path,class: 'btn btn-info' %>
<% end %>
